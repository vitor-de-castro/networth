<%= render 'shared/flash' %>

<div class="networth-container">
  <div class="networth-content">

    <%# Header %>
    <div class="networth-header">
      <h1>NetWorth</h1>
    </div>

    <%# Net Worth Card %>
    <div class="networth-card">
      <h2>Total Net Worth</h2>
      <p class="amount">
        $<%= number_with_delimiter(@total_net_worth.round(2), delimiter: ',') %>
      </p>
    </div>

    <%# Add Asset Button %>
    <%= link_to new_asset_path, class: "add-asset-btn" do %>
      <span class="icon">+</span> Add Asset
    <% end %>

    <%# Charts Section - only show if user has assets %>
    <% if @assets.any? %>
      <div class="charts-section" id="charts">

        <%# Pie Chart %>
        <div class="chart-card">
          <h3 class="chart-title">Asset Breakdown</h3>
          <%= pie_chart @assets_by_category,
                        colors: ["#f1d26cff", "#4FC3F7", "#81C784", "#FF8A65", "#CE93D8", "#F06292", "#80DEEA"],
                        legend: true,
                        height: "300px" %>
        </div>

        <%# Category Breakdown List %>
        <div class="chart-card">
          <h3 class="chart-title">By Category</h3>
          <div class="category-list">
            <% @assets_by_category.sort_by { |_, v| -v }.each do |category, value| %>
              <div class="category-item">
                <span class="category-name"><%= category %></span>
                <div class="category-bar-wrapper">
                  <div class="category-bar"
                       style="width: <%= (@total_net_worth > 0 ? (value / @total_net_worth * 100) : 0).round(1) %>%">
                  </div>
                </div>
                <span class="category-value">
                  $<%= number_with_delimiter(value.round(2), delimiter: ',') %>
                  <span class="category-percent">
                    (<%= (@total_net_worth > 0 ? (value / @total_net_worth * 100) : 0).round(1) %>%)
                  </span>
                </span>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    <% end %>

    <%# Assets List %>
    <div class="assets-section" id="assets">
      <h2>Your Assets (<%= @assets.count %>)</h2>

      <% if @assets.any? %>
        <div class="assets-list">
          <% @assets.each do |asset| %>
            <div class="asset-item">
              <div class="asset-info">
                <h3><%= asset.name %></h3>
                <p class="asset-meta">
                  <span class="category"><%= asset.category %></span>
                  <% if asset.notes.present? %>
                    <span class="separator">â€¢</span>
                    <%= asset.notes.truncate(50) %>
                  <% end %>
                </p>
              </div>
              <div class="asset-actions">
                <p class="value">
                  $<%= number_with_delimiter(asset.value.round(2), delimiter: ',') %>
                </p>
                <div class="actions">
                  <%= link_to "Edit", edit_asset_path(asset), class: "edit-link" %>
                  <%= button_to "Delete", asset_path(asset),
                                method: :delete,
                                data: { turbo_confirm: "Are you sure?" },
                                class: "delete-btn" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="empty-state">
          <p class="title">No assets yet</p>
          <p class="subtitle">Click "Add Asset" above to start tracking your net worth</p>
        </div>
      <% end %>
    </div>
    <%# AI Financial Assistant %>
<div class="ai-section" id="ai-assistant">
  <h2 class="ai-title">AI Financial Assistant</h2>
  <p class="ai-subtitle">Ask me anything about your portfolio</p>

  <%# Response area - updates when user asks a question %>
  <div id="ai-response" class="ai-response-area">
    <div class="ai-empty-state">
      <p>ðŸ‘‹ Hi! I can see your portfolio. Ask me anything!</p>
      <p class="ai-suggestions-title">Try asking:</p>
      <ul class="ai-suggestions">
        <li onclick="document.querySelector('.ai-input').value='How diversified is my portfolio?'">
        "How diversified is my portfolio?"
        </li>
        <li onclick="document.querySelector('.ai-input').value='How can I grow my net worth faster?'">
        "How can I grow my net worth faster?"
        </li>
        <li onclick="document.querySelector('.ai-input').value='Should I rebalance my assets?'">
        "Should I rebalance my assets?"
        </li>
        <li onclick="document.querySelector('.ai-input').value='What are my biggest risks?'">
        "What are my biggest risks?"
        </li>
      </ul>
    </div>
  </div>

  <%# Input form %>
  <%= form_with url: ask_ai_path, data: { turbo_stream: true } do |form| %>
    <div class="ai-input-area">
      <%= form.text_field :question,
                          placeholder: "Ask about your portfolio...",
                          class: "ai-input",
                          autocomplete: "off" %>
      <%= form.submit "Ask", class: "ai-submit-btn" %>
    </div>
    <% end %>
  </div>
  </div>

</div>
