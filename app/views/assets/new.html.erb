<div style="min-height: 100vh; background: #0a1929; color: #ffffff; font-family: 'Inter', 'Segoe UI', sans-serif; padding: 2rem;">
  <div style="max-width: 600px; margin: 0 auto;">

    <h1 style="font-family: 'Playfair Display', Georgia, serif; font-size: 2rem;
                color: #DAB656; font-weight: 700; margin-bottom: 2rem;">
      Add New Asset
    </h1>

    <%= form_with(model: @asset, local: true) do |form| %>

      <%# Show errors if any %>
      <% if @asset.errors.any? %>
        <div style="background: rgba(255, 107, 107, 0.2); padding: 1rem; border-radius: 8px;
                    margin-bottom: 1.5rem; border: 1px solid rgba(255, 107, 107, 0.5);">
          <h3 style="margin: 0 0 0.5rem 0; color: #ff6b6b; font-size: 1rem;">
            <%= pluralize(@asset.errors.count, "error") %> prevented this asset from being saved:
          </h3>
          <ul style="margin: 0; padding-left: 1.5rem;">
            <% @asset.errors.full_messages.each do |message| %>
              <li style="color: rgba(255, 255, 255, 0.9);"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div style="margin-bottom: 1.5rem;">
        <%= form.label :category, style: "display: block; margin-bottom: 0.5rem;
                                          font-weight: 600; color: #DAB656; font-size: 0.9rem;
                                          letter-spacing: 1px; text-transform: uppercase;" %>
        <%= form.select :category, Asset::CATEGORIES,
                        { prompt: 'Select a category' },
                        style: "width: 100%; padding: 0.8rem; font-size: 1rem;
                                background: rgba(255, 255, 255, 0.05); color: #ffffff;
                                border: 1px solid rgba(255, 215, 0, 0.3); border-radius: 8px;
                                font-family: inherit;" %>
      </div>

      <div style="margin-bottom: 1.5rem;">
        <%= form.label :name, style: "display: block; margin-bottom: 0.5rem;
                                      font-weight: 600; color: #DAB656; font-size: 0.9rem;
                                      letter-spacing: 1px; text-transform: uppercase;" %>
        <%= form.text_field :name, placeholder: "e.g., Chase Checking",
                            style: "width: 100%; padding: 0.8rem; font-size: 1rem;
                                    background: rgba(255, 255, 255, 0.05); color: #ffffff;
                                    border: 1px solid rgba(255, 215, 0, 0.3); border-radius: 8px;
                                    font-family: inherit;" %>
      </div>

      <div style="margin-bottom: 1.5rem;">
        <%= form.label :value, "Value ($)",
                       style: "display: block; margin-bottom: 0.5rem;
                               font-weight: 600; color: #DAB656; font-size: 0.9rem;
                               letter-spacing: 1px; text-transform: uppercase;" %>
        <%= form.number_field :value, step: 0.01, placeholder: "0.00",
                              style: "width: 100%; padding: 0.8rem; font-size: 1rem;
                                      background: rgba(255, 255, 255, 0.05); color: #ffffff;
                                      border: 1px solid rgba(255, 215, 0, 0.3); border-radius: 8px;
                                      font-family: inherit;" %>
      </div>

      <div style="margin-bottom: 2rem;">
        <%= form.label :notes, "Notes (optional)",
                       style: "display: block; margin-bottom: 0.5rem;
                               font-weight: 600; color: #DAB656; font-size: 0.9rem;
                               letter-spacing: 1px; text-transform: uppercase;" %>
        <%= form.text_area :notes, rows: 3, placeholder: "Any additional information...",
                           style: "width: 100%; padding: 0.8rem; font-size: 1rem;
                                   background: rgba(255, 255, 255, 0.05); color: #ffffff;
                                   border: 1px solid rgba(255, 215, 0, 0.3); border-radius: 8px;
                                   font-family: inherit; resize: vertical;" %>
      </div>

      <div style="display: flex; gap: 1rem;">
        <%= form.submit "Add Asset",
                        style: "padding: 0.9rem 2rem; background: #DAB656; color: #0a1929;
                                border: none; border-radius: 8px; cursor: pointer; font-size: 1rem;
                                font-weight: 600; font-family: inherit;
                                box-shadow: 0 4px 16px rgba(255, 215, 0, 0.3);" %>
        <%= link_to "Cancel", root_path,
                    style: "padding: 0.9rem 2rem; background: rgba(255, 255, 255, 0.1);
                            color: #ffffff; text-decoration: none; border-radius: 8px;
                            display: inline-block; border: 1px solid rgba(255, 255, 255, 0.2);
                            font-weight: 500;" %>
      </div>
    <% end %>
  </div>
</div>

<%# Import Google Fonts %>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
