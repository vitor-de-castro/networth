<div style="max-width: 600px; margin: 0 auto; padding: 2rem;">
  <h1>Add New Asset</h1>

  <%= form_with(model: @asset, local: true) do |form| %>

    
    <% if @asset.errors.any? %>
      <div style="background: #ffcccc; padding: 1rem; border-radius: 4px; margin-bottom: 1rem;">
        <h3><%= pluralize(@asset.errors.count, "error") %> prevented this asset from being saved:</h3>
        <ul>
          <% @asset.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 1rem;">
      <%= form.label :category, style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.select :category, Asset::CATEGORIES, { prompt: 'Select a category' },
                      style: "width: 100%; padding: 0.5rem; font-size: 1rem;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :name, style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.text_field :name, placeholder: "e.g., Chase Checking",
                          style: "width: 100%; padding: 0.5rem; font-size: 1rem;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :value, "Value ($)", style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.number_field :value, step: 0.01, placeholder: "0.00",
                            style: "width: 100%; padding: 0.5rem; font-size: 1rem;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= form.label :notes, "Notes (optional)", style: "display: block; margin-bottom: 0.5rem; font-weight: bold;" %>
      <%= form.text_area :notes, rows: 3, placeholder: "Any additional information...",
                         style: "width: 100%; padding: 0.5rem; font-size: 1rem;" %>
    </div>

    <div style="display: flex; gap: 1rem;">
      <%= form.submit "Add Asset", style: "padding: 0.75rem 2rem; background: #4CAF50; color: white;
                                           border: none; border-radius: 4px; cursor: pointer; font-size: 1rem;" %>
      <%= link_to "Cancel", root_path, style: "padding: 0.75rem 2rem; background: #999; color: white;
                                               text-decoration: none; border-radius: 4px; display: inline-block;" %>
    </div>
  <% end %>
</div>
