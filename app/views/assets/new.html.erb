<div class="networth-container">
  <div class="networth-form-container">

    <h1 class="form-title">Add New Asset</h1>

    <%= form_with(model: @asset, data: { turbo: false }) do |form| %>

      <%# Show errors if any %>
      <% if @asset.errors.any? %>
        <div class="form-errors">
          <h3><%= pluralize(@asset.errors.count, "error") %> prevented this asset from being saved:</h3>
          <ul>
            <% @asset.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :category %>
        <%= form.select :category, Asset::CATEGORIES, { prompt: 'Select a category' } %>
      </div>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "e.g., Chase Checking" %>
      </div>

      <div class="form-group">
        <%= form.label :value, "Value ($)" %>
        <%= form.number_field :value, step: 0.01, placeholder: "0.00" %>
      </div>

      <div class="form-group">
        <%= form.label :notes, "Notes (optional)" %>
        <%= form.text_area :notes, rows: 3, placeholder: "Any additional information..." %>
      </div>

      <div class="form-actions">
        <%= form.submit "Add Asset", class: "btn-primary" %>
        <%= link_to "Cancel", root_path, class: "btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
