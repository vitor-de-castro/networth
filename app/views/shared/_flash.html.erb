<% if notice %>
  <div style="background: #d4edda; color: #155724; padding: 1rem; margin-bottom: 1rem;
              border-radius: 4px; border: 1px solid #c3e6cb;">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div style="background: #f8d7da; color: #721c24; padding: 1rem; margin-bottom: 1rem;
              border-radius: 4px; border: 1px solid #f5c6cb;">
    <%= alert %>
  </div>
<% end %>
